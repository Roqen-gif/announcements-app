generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Announcement {
  id              Int        @id @default(autoincrement())
  title           String
  content         String
  publicationDate DateTime
  lastUpdate      DateTime   @updatedAt
  linkSlug        String     @unique
  categories      Category[] @relation("AnnouncementCategories")
}

model Category {
  id            Int            @id @default(autoincrement())
  name          String         @unique
  announcements Announcement[] @relation("AnnouncementCategories")
}
